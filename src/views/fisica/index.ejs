<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Datos de f√≠sica</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

  <header>
    <nav>
      <a href="/">üè† Inicio</a>
      <a href="/fisica/create">‚ûï Ingresar datos nuevos</a>
    </nav>
  </header>

  <% const items = Array.isArray(fisica) ? fisica : []; %>

  <h1>Datos Generales del Levitador</h1>

  <% if (typeof error !== 'undefined' && error) { %>
    <div class="container-center">
      <p style="color:red"><%= error %></p>
    </div>
  <% } %>

  <% if (items.length > 0) { %>
    <div class="container-center">
      <section class="contenedor table-panel">
        <table>
          <thead>
            <tr>
              <th>Id</th>
              <th>Voltaje</th>
              <th>Temperatura</th>
              <th>Distancia</th>
              <th>Fecha</th>
              <th colspan="3">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% items.forEach(f => { %>
              <tr>
                <!-- Ajusta ID_FISICA si tu consulta devuelve otro nombre -->
                <td><%= f.ID_FISICA %></td>
                <td><%= f.voltaje %></td>
                <td><%= f.temperatura %></td>
                <td><%= f.distancia %></td>
                <td>
                  <%
                    const raw = f.Fecha_Datos;
                    const d = raw ? new Date(typeof raw === 'string' ? raw.replace(' ','T') : raw) : null;
                  %>
                  <%= d ? d.toISOString().replace('T',' ').slice(0,16) : '‚Äî' %>
                </td>
                <td>
                  <a href="/fisica/<%= f.ID_FISICA %>">Ver</a>
                </td>
                <td>
                  <a href="/fisica/<%= f.ID_FISICA %>/edit">Editar</a>
                </td>
                <td>
                  <form action="/fisica/<%= f.ID_FISICA %>?_method=DELETE" method="POST" style="display:inline">
                    <button type="submit" onclick="return confirm('¬øSeguro que desea eliminar?')">Eliminar</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </section>
    </div>
  <% } else { %>
    <div class="container-center">
      <p>No hay registros a√∫n. <a href="/fisica/create">Crea el primero</a>.</p>
    </div>
  <% } %>

</body>
</html>
