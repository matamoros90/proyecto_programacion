<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Datos de f√≠sica</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

  <header>
    <nav>
      <a href="/">üè† Inicio</a> 
      <a href="/fisica/create">‚ûï Ingresar datos nuevos</a>
    </nav>
  </header>

  <% 
    // Normaliza variables para evitar ReferenceError en despliegue
    const items = (typeof fisica !== 'undefined' && Array.isArray(fisica)) ? fisica : [];
    const err   = (typeof error  !== 'undefined' && error) ? error : null;
  %>

  <h1>Datos Generales del Levitador</h1>

  <% if (err) { %>
    <p style="color:red"><%= err %></p>
  <% } %>

  <% if (items.length > 0) { %>
    <div class="container-center">
      <section class="contenedor table-panel">
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Voltaje</th>
              <th>Temperatura</th>
              <th>Distancia</th>
              <th>Fecha</th>
              <th colspan="3">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% items.forEach(r => { %>
              <tr>
                <td><%= r.ID_FISICA ?? r.id_fisica %></td>
                <td><%= r.voltaje %></td>
                <td><%= r.temperatura %></td>
                <td><%= r.distancia %></td>
                <td>
                  <% 
                    const raw = r.Fecha_Datos;
                    const d = raw ? new Date(typeof raw === 'string' ? raw.replace(' ','T') : raw) : null;
                  %>
                  <%= d ? d.toISOString().replace('T',' ').slice(0,16) : '‚Äî' %>
                </td>
                <td><a href="/fisica/<%= (r.ID_FISICA ?? r.id_fisica) %>">Ver</a></td>
                <td><a href="/fisica/<%= (r.ID_FISICA ?? r.id_fisica) %>/edit">Editar</a></td>
                <td>
                  <form action="/fisica/<%= (r.ID_FISICA ?? r.id_fisica) %>?_method=DELETE" method="POST" style="display:inline;">
                    <button type="submit" onclick="return confirm('¬øSeguro que desea eliminar?')">Eliminar</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </section>
    </div>
  <% } else { %>
    <div class="container-center">
      <p>No hay registros a√∫n. <a href="/fisica/create">Crea el primero</a>.</p>
    </div>
  <% } %>

</body>
</html>
